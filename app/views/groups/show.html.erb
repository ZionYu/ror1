<div class="col-md-12">
  <div class="group">
    <span class="float-right">
      <% if current_user && current_user.is_member_of?(@group) %>
        <label class="badge badge-success p-1"> 群組成員 </label>
        <%= link_to("Quit Group", quit_group_path(@group), method: :post, class: "btn btn-outline-danger") %>
      <% else %>
        <label class="badge badge-warning p-1"> 不是群組成員 </label>
        <%= link_to("Join Group", join_group_path(@group), method: :post, class: "btn btn-outline-success") %>
      <% end %>
    </span>
    <%= link_to("New Post", new_group_post_path(@group), class: "btn btn-outline-primary float-right")%>
    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary float-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>
  <table class="table">
    <thead>
      <tr>
        <th>文章内容</th>
        <th>發表者</th>
        <th>發表時間</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="col-md-6 offset-md-5">
    <%= will_paginate @posts %>
  </div>
	
</div>